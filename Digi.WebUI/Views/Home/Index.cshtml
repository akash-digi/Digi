@model KeywordViewModel

<div class="card shadow border-0 mt-4">
    <partial name="_KeywordSearch" model="Model?.Request" />

    @if (Model is not null && Model.Response is not null)
    {

        <div class="row pb-3">
            <h2>Search for @Model.Response.Keyword :</h2>
            @if (Model.Response.ListOfKeywordResults.Count == 0)
            {
                <p>No Result Found</p>
            }
            @foreach (var result in Model.Response.ListOfKeywordResults)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="row p-2">
                        <div class="col-12 p-1">
                            <div class="card border-0 p-3 shadow  border-top border-5 rounded">
                                <img src="@result.ImageUrl" class="card-img-top rounded" />
                                <div class="card-body pb-0">
                                    <div class="pl-1">
                                        <p class="card-title h6 text-dark opacity-75 text-uppercase text-center">@result.Title</p>

                                    </div>
                                    <div class="pl-1">
                                        <p class="text-dark text-opacity-85 text-center mb-0">

                                        </p>
                                        For more details <a href="@result.LinkUrl" target="_blank">click here </a>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
